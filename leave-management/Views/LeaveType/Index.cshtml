@model IEnumerable<leave_management.Models.LeaveTypeDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus-circle"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>        
        <th>@Html.DisplayNameFor(model => model.IsActive)</th>        
        <th>@Html.DisplayNameFor(model => model.DateCreated)</th>  
        <th></th>
    </tr>    
    </thead>
    <tbody>
    @foreach (var leaveType in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => leaveType.Name)</td>
            <td>@Html.DisplayFor(modelItem => leaveType.IsActive)</td>
            <td>@Html.DisplayFor(modelItem => leaveType.DateCreated)</td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@leaveType.Id">Edit</a>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@leaveType.Id">Details</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@leaveType.Id" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}
