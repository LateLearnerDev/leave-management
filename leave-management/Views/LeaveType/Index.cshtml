@model IEnumerable<leave_management.Models.DetailsLeaveTypeVm>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p asp-action="Create">Create New</p>
<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>        
        <th>@Html.DisplayNameFor(model => model.DateCreated)</th>        
    </tr>    
    </thead>
    <tbody>
        @foreach (var leaveType in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => leaveType.Name)</td>
                <td>@Html.DisplayFor(modelItem => leaveType.DateCreated)</td>
            </tr>
            <tr>
                <td></td>
            </tr>
        }
    </tbody>
</table>